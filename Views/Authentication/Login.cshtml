@model BankingSystem.DTO.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>>

<div class="row">
    <div class="col-md-4">
        <form id="loginForm" asp-action="Login" asp-controller="Authentication" method="post">
            @* <h2>Login</h2> *@
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="username"></label>
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="password" type="password" class="form-control" autocomplete="password" aria-required="true" />
                <label asp-for="password"></label>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <button id="LoginSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
        </form>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
